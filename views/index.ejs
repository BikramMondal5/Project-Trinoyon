          <script>
          let selectedAmount = 100;
          let razorpayOptions = null;
          let currentDonorData = {};

          // Amount selection functions
          function selectAmount(amount) {
            selectedAmount = amount;
            document.getElementById('selectedAmount').textContent = 'â‚¹' + amount;
            document.getElementById('customAmount').value = amount;

            const buttons = document.querySelectorAll('.donation-amount-btn');
            buttons.forEach(btn => {
              btn.classList.remove('bg-yellow-200', 'border-yellow-500');
              btn.classList.add('bg-gray-100');
            });

            const selectedBtn = document.querySelector(`[onclick="selectAmount(${amount})"]`);
            if (selectedBtn) {
              selectedBtn.classList.remove('bg-gray-100');
              selectedBtn.classList.add('bg-yellow-200', 'border-yellow-500');
            }
          }

          function updateSelectedAmount() {
            const customInput = document.getElementById('customAmount');
            const amount = parseInt(customInput.value) || 0;

            if (customInput.value !== '' && amount >= 0) {
              // Update selectedAmount even if it's less than minimum
              selectedAmount = amount;
              document.getElementById('selectedAmount').textContent = 'â‚¹' + amount;

              // Clear preset button selection when typing custom amount
              const buttons = document.querySelectorAll('.donation-amount-btn');
              buttons.forEach(btn => {
                btn.classList.remove('bg-yellow-200', 'border-yellow-500');
                btn.classList.add('bg-gray-100');
              });
            } else if (customInput.value === '') {
              // Only reset to 100 when input is completely empty
              selectedAmount = 100;
              document.getElementById('selectedAmount').textContent = 'â‚¹100';
            }
          }

          // Modal functions
          function showDonorModal() {
            document.getElementById('donorModal').classList.remove('hidden');
            document.body.style.overflow = 'hidden';
          }

          function hideDonorModal() {
            document.getElementById('donorModal').classList.add('hidden');
            document.body.style.overflow = 'auto';
          }

          function validateDonorInfo() {
            const name = document.getElementById('donorName').value.trim();
            const email = document.getElementById('donorEmail').value.trim();
            const message = document.getElementById('message').value.trim();

            if (!name) {
              showNotification('Please enter your full name', 'error');
              return false;
            }

            if (!email) {
              showNotification('Please enter your email address', 'error');
              return false;
            }

            if (!message) {
              showNotification('Please enter a message', 'error');
              return false;
            }

            // Basic email validation
            const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
            if (!emailRegex.test(email)) {
              showNotification('Please enter a valid email address', 'error');
              return false;
            }

            return true;
          }

          async function createOrder(donorInfo = {}) {
            try {
              const uniqueReceipt = `receipt_${Date.now()}_${Math.random().toString(36).substring(2, 10)}`;
              
              const response = await fetch('/api/create-order', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({
                  amount: selectedAmount,
                  receipt: uniqueReceipt,
                  donor_name: donorInfo.name || '',
                  donor_email: donorInfo.email || '',
                  message: donorInfo.message || '',
                  notes: {
                    address: "Trinoyon Donation"
                  }
                }),
              });

              const data = await response.json();

              if (!response.ok) {
                throw new Error(data.message || 'Failed to create order');
              }

              return data;
            } catch (error) {
              console.error('Error creating order:', error);
              showNotification(error.message || 'Error creating order. Please try again.', 'error');
              return null;
            }
          }

          async function verifyPayment(paymentData, orderData, donorInfo = {}) {
            try {
              console.log('ðŸ” Verifying payment and saving to database...');
              
              const response = await fetch('/api/verify-payment', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({
                  ...paymentData,
                  // Include donation data to save to database
                  donor_name: donorInfo.name || '',
                  donor_email: donorInfo.email || '',
                  message: donorInfo.message || '',
                  amount: selectedAmount,
                  currency: orderData.currency,
                  notes: {
                    address: "Trinoyon Donation"
                  }
                }),
              });
              
              const data = await response.json();
              
              if (!response.ok) {
                throw new Error(data.message || 'Verification failed');
              }
              
              return data;
            } catch (error) {
              console.error('Error verifying payment:', error);
              return { success: false, error: error.message || 'Verification failed' };
            }
          }

          function showNotification(message, type = 'success') {
            const notification = document.createElement('div');
            notification.className = `fixed top-4 right-4 z-50 p-4 rounded-lg shadow-lg transition-all duration-300 ${
              type === 'success' ? 'bg-green-500 text-white' : 'bg-red-500 text-white'
            }`;
            notification.textContent = message;

            document.body.appendChild(notification);

            setTimeout(() => {
              notification.style.opacity = '0';
              setTimeout(() => {
                if (document.body.contains(notification)) {
                  document.body.removeChild(notification);
                }
              }, 300);
            }, 5000);
          }

          async function handlePayment() {
            // Allow any positive amount
            if (selectedAmount <= 0) {
              showNotification('Please enter a valid donation amount', 'error');
              return;
            }

            const payButton = document.getElementById('proceedToPay');
            const originalText = payButton.innerHTML;
            payButton.innerHTML = '<i class="ri-loader-4-line animate-spin"></i> Processing...';
            payButton.disabled = true;

            try {
              console.log('ðŸš€ Starting payment process with amount: â‚¹' + selectedAmount);

              // Step 1: Create Razorpay order (no DB entry)
              const orderData = await createOrder(currentDonorData);
              if (!orderData || !orderData.success) {
                throw new Error(orderData?.message || 'Failed to create order');
              }

              console.log('âœ… Razorpay order created (no DB entry yet):', orderData.orderId);

              // Step 2: Setup Razorpay options
              razorpayOptions = {
                key: orderData.key_id,
                amount: orderData.amount,
                currency: orderData.currency,
                name: "Trinoyon",
                description: `Donation of â‚¹${selectedAmount}`,
                image: "/images/Logo.png",
                order_id: orderData.orderId,
                handler: async function (response) {
                  try {
                    console.log('ðŸ’³ Payment completed for â‚¹' + selectedAmount + ', verifying and saving to database...');
                    
                    // Verify payment AND save to database in one step
                    const verificationResult = await verifyPayment(
                      {
                        razorpay_payment_id: response.razorpay_payment_id,
                        razorpay_order_id: response.razorpay_order_id,
                        razorpay_signature: response.razorpay_signature
                      },
                      orderData,
                      currentDonorData
                    );

                    if (verificationResult.success) {
                      showNotification(`Thank you ${currentDonorData.name} for your donation of â‚¹${selectedAmount}! Payment successful.`, 'success');
                      // Reset to default after successful payment
                      selectedAmount = 100;
                      selectAmount(100);
                      // Clear form
                      document.getElementById('donorName').value = '';
                      document.getElementById('donorEmail').value = '';
                      document.getElementById('message').value = '';
                      hideDonorModal();
                      console.log('âœ… Payment verified and saved to database successfully');
                    } else {
                      showNotification(verificationResult.message || 'Payment verification failed. Please contact support.', 'error');
                      console.log('âŒ Payment verification failed - not saved to database');
                    }
                  } catch (error) {
                    console.error('Error in payment verification:', error);
                    showNotification('Payment verification failed. Please contact support.', 'error');
                  }
                },
                prefill: {
                  name: currentDonorData.name || "",
                  email: currentDonorData.email || "",
                  contact: currentDonorData.phone || ""
                },
                notes: {
                  address: "Trinoyon Donation"
                },
                theme: {
                  color: "#EAB308"
                },
                modal: {
                  ondismiss: function () {
                    console.log('âŒ Payment modal dismissed by user - no database entry made');
                    showNotification('Payment cancelled', 'error');
                    hideDonorModal();
                  }
                }
              };

              // Step 3: Create Razorpay instance and setup event handlers
              const rzp = new Razorpay(razorpayOptions);
              
              rzp.on('payment.failed', async function (response) {
                console.log('âŒ Payment failed - no database entry made:', response.error);
                showNotification(`Payment failed: ${response.error.description}`, 'error');
                hideDonorModal();
              });

              // Step 4: Hide modal and open Razorpay modal
              hideDonorModal();
              console.log('ðŸ“± Opening Razorpay payment modal...');
              rzp.open();

            } catch (error) {
              console.error('Error in payment process:', error);
              showNotification(error.message || 'An error occurred. Please try again.', 'error');
            } finally {
              payButton.innerHTML = originalText;
              payButton.disabled = false;
            }
          }

          // Function to collect donor information (if you have a form)
          function collectDonorInfo() {
            // You can modify this to collect data from your form fields
            return {
              name: document.getElementById('donorName')?.value || '',
              email: document.getElementById('donorEmail')?.value || '',
              message: document.getElementById('message')?.value || ''
            };
          }

          document.addEventListener('DOMContentLoaded', function () {
            selectAmount(100);

            const payButton = document.getElementById('rzp-button');
            if (payButton) {
              payButton.onclick = function (e) {
                e.preventDefault();
                
                // Show donor information modal first
                showDonorModal();
              };
            }

            // Modal event listeners
            document.getElementById('cancelDonation').onclick = function() {
              hideDonorModal();
            };

            document.getElementById('proceedToPay').onclick = function() {
              if (validateDonorInfo()) {
                // Collect donor information before payment
                currentDonorData = collectDonorInfo();
                handlePayment();
              }
            };

            // Close modal on outside click
            document.getElementById('donorModal').onclick = function(e) {
              if (e.target === this) {
                hideDonorModal();
              }
            };

            // Handle Enter key in form fields
            ['donorName', 'donorEmail', 'hone'].forEach(fieldId => {
              const field = document.getElementById(fieldId);
              if (field) {
                field.addEventListener('keypress', function(e) {
                  if (e.key === 'Enter') {
                    e.preventDefault();
                    if (validateDonorInfo()) {
                      currentDonorData = collectDonorInfo();
                      handlePayment();
                    }
                  }
                });
              }
            });

            const customAmountInput = document.getElementById('customAmount');
            if (customAmountInput) {
              customAmountInput.addEventListener('input', function () {
                // Allow any numeric input without restriction
                this.value = this.value.replace(/[^0-9]/g, '');
                updateSelectedAmount();
              });

              customAmountInput.addEventListener('keypress', function (e) {
                if (e.key === 'Enter') {
                  e.preventDefault();
                  showDonorModal();
                }
              });
            }
          });

          </script>

