<script>
  document.addEventListener("DOMContentLoaded", () => {
    const contactSection = document.getElementById("contact");
    const contactLink = document.getElementById("contact-link");
    const homeLink = document.getElementById("home-link");

    if (!contactLink) return;

    // If URL starts with #contact, immediately highlight Contact Us
    if (window.location.hash === "#contact") {
      contactLink.classList.add("text-primary", "border-primary");
      contactLink.classList.remove("text-gray-700", "border-transparent");

      if (homeLink) {
        homeLink.classList.remove("text-primary", "border-primary");
        homeLink.classList.add("text-gray-700", "border-transparent");
      }
    }

    // Use IntersectionObserver for scroll-based highlight
    if (contactSection) {
      const observer = new IntersectionObserver((entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            contactLink.classList.add("text-primary", "border-primary");
            contactLink.classList.remove("text-gray-700", "border-transparent");

            if (homeLink) {
              homeLink.classList.remove("text-primary", "border-primary");
              homeLink.classList.add("text-gray-700", "border-transparent");
            }
          } else {
            contactLink.classList.remove("text-primary", "border-primary");
            contactLink.classList.add("text-gray-700", "border-transparent");

            if (homeLink && window.location.pathname === "/") {
              homeLink.classList.add("text-primary", "border-primary");
              homeLink.classList.remove("text-gray-700", "border-transparent");
            }
          }
        });
      }, {
        threshold: 0.4
      });

      observer.observe(contactSection);
    }
  });
